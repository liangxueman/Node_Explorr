<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" >
        <div class="form-group">
          <label for="comment_textarea">Comments</label>
          <textarea class="form-control" name="comment[text]" id="comment_textarea" rows="6"><%= comment.text %></textarea>
        </div>
        <div class="form-group"><button class="btn btn-lg btn-primary">Update</button></div>
      </form>
      <a href="/campgrounds">Go back to campgrounds page</a>
    </div>
</div>

<% include ../partials/footer %>

