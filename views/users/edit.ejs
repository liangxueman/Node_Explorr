<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center">Edit Profile for <%= viewUser.username %></h1>
  <div style="width: 30%; margin: 30px auto">
    <form action="/users/<%= viewUser._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label>First Name</label>
        <input class="form-control" type="text" name="viewUser[firstname]" value=<%= viewUser.firstname %>>
      </div>
      <div class="form-group">
        <label>Last Name</label>
        <input class="form-control" type="text" name="viewUser[lastname]" value=<%= viewUser.lastname %>>
      </div>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="email" name="viewUser[email]" value=<%= viewUser.email %>>
      </div>
      <div class="form-group"><button class="form-control btn btn-sm btn-primary">Save</button></div>
    </form>
  </div>
</div>

<% include ../partials/footer %>